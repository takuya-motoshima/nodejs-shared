{
  "name": "nodejs-shared",
  "version": "1.0.30",
  "type": "module",
  "description": "Essential Node.js utilities, shared and ready to use.",
  "main": "dist/build.common.js",
  "module": "dist/build.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "watch": "rollup -c rollup.config.js --watc",
    "prewatch": "rimraf dist types",
    "build": "rollup -c rollup.config.js",
    "prebuild": "rimraf dist types",
    "test": "jest",
    "test:clear-cache": "jest --clearCache",
    "//watch": "rollup -c --watch --bundleConfigAsCjs",
    "//build": "rollup -c --bundleConfigAsCjs",
    "doc": "typedoc"
  },
  "_moduleAliases": {
    "~": "."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takuya-motoshima/nodejs-shared.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "javascript",
    "js",
    "shared",
    "library",
    "lib",
    "module",
    "typescript",
    "ts",
    "esm",
    "es6"
  ],
  "author": "Takuya Motoshima <developer.takuyamotoshima@gmail.com> (https://twitter.com/TakuyaMotoshima)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takuya-motoshima/nodejs-shared/issues",
    "email": "developer.takuyamotoshima@gmail.com"
  },
  "homepage": "https://github.com/takuya-motoshima/nodejs-shared#readme",
  "dependencies": {
    "bowser": "^2.10.0",
    "csv-parse": "^5.5.0",
    "glob": "^10.4.2",
    "gm": "^1.25.0",
    "image-size": "^0.8.3",
    "mime": "^4.0.4",
    "mime-types": "^2.1.27",
    "moment": "^2.26.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.33.5",
    "uniqid": "^5.2.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/glob": "^8.1.0",
    "@types/gm": "^1.25.0",
    "@types/jest": "^29.2.4",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^22.7.6",
    "@types/sharp": "^0.32.0",
    "@types/uniqid": "^5.2.0",
    "@types/validator": "^13.12.2",
    "builtin-modules": "^3.1.0",
    "dotenv": "^16.4.5",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^4.24.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typedoc": "^0.26.10",
    "typedoc-theme-hierarchy": "^5.0.3"
  }
}
